{
  "name": "emobot",
  "version": "1.0.0",
  "description": "Bot d'emo",
  "main": "src/server.js",
  "dependencies": {
    "express": "4.16.3"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-es2015": "6.24.1",
    "babel-watch": "2.0.7",
    "eslint": "4.19.1",
    "eslint-plugin-prettier": "2.6.0",
    "jest": "23.1.0",
    "prettier": "1.13.5"
  },
  "scripts": {
    "build": "babel src -d build",
    "clean": "rm -rf build && mkdir build",
    "start": "yarn run build && node build/server.js",
    "watch": "babel-watch src/server.js",
    "test": "jest"
  },
  "license": "ISC",
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "plugins": [
      "prettier"
    ],
    "extends": "eslint:recommended",
    "rules": {
      "strict": "error",
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "semi": false
  }
}
